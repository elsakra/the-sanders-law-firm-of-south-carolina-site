---
import { getCollection } from 'astro:content';

interface Props {
  headline?: string;
  practicesHeadline?: string;
  industriesHeadline?: string;
}

const { 
  headline = "Key Services",
  practicesHeadline = "Practices",
  industriesHeadline = "Industries"
} = Astro.props;

const services = await getCollection('services');
const sortedServices = services.sort((a, b) => (a.data.order || 0) - (b.data.order || 0));

// Group into practices and industries (if tagged)
const practices = sortedServices.filter(s => !s.data.category || s.data.category === 'practice');
const industries = sortedServices.filter(s => s.data.category === 'industry');
---

<section class="bg-neutral-950 py-28">
  <div class="max-w-7xl mx-auto px-6 lg:px-8">
    <div class="mb-12">
      <div class="inline-flex items-center gap-3 text-xs uppercase tracking-[0.28em] text-neutral-400">
        <span class="h-px w-10 bg-primary-500/70"></span>
        <span>Practice Areas</span>
      </div>
      <h2 class="mt-5 font-display text-4xl sm:text-5xl text-white tracking-tight">{headline}</h2>
    </div>
    
    <!-- Tab Buttons -->
    <div class="flex flex-wrap gap-3 mb-10" role="tablist">
      <button 
        type="button"
        class="tab-button px-5 py-2.5 text-xs font-semibold uppercase tracking-[0.2em] border transition-colors active"
        data-tab="practices"
        role="tab"
        aria-selected="true"
      >
        {practicesHeadline}
      </button>
      {industries.length > 0 && (
        <button 
          type="button"
          class="tab-button px-5 py-2.5 text-xs font-semibold uppercase tracking-[0.2em] border transition-colors"
          data-tab="industries"
          role="tab"
          aria-selected="false"
        >
          {industriesHeadline}
        </button>
      )}
    </div>
    
    <!-- Practices Tab -->
    <div class="tab-content" id="practices-tab" role="tabpanel">
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
        {practices.map((service) => (
          <a 
            href={`/services/${service.slug}`}
            class="group relative flex items-center justify-between p-6 bg-white/5 border border-white/10 hover:border-primary-500/40 hover:bg-white/10 transition-all"
          >
            <h3 class="font-display text-xl text-white group-hover:text-primary-400 transition-colors">
              {service.data.title}
            </h3>
            <svg class="w-5 h-5 text-neutral-400 group-hover:text-primary-400 group-hover:translate-x-1 transition-all" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M17 8l4 4m0 0l-4 4m4-4H3" />
            </svg>
          </a>
        ))}
      </div>
    </div>
    
    <!-- Industries Tab -->
    {industries.length > 0 && (
      <div class="tab-content hidden" id="industries-tab" role="tabpanel">
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
          {industries.map((service) => (
            <a 
              href={`/services/${service.slug}`}
              class="group relative flex items-center justify-between p-6 bg-white/5 border border-white/10 hover:border-primary-500/40 hover:bg-white/10 transition-all"
            >
              <h3 class="font-display text-xl text-white group-hover:text-primary-400 transition-colors">
                {service.data.title}
              </h3>
              <svg class="w-5 h-5 text-neutral-400 group-hover:text-primary-400 group-hover:translate-x-1 transition-all" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M17 8l4 4m0 0l-4 4m4-4H3" />
              </svg>
            </a>
          ))}
        </div>
      </div>
    )}
    
    <!-- View All Links -->
    <div class="flex gap-6 mt-10">
      <a href="/services" class="inline-flex items-center gap-2 text-primary-400 font-medium hover:gap-3 transition-all">
        View all practices
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
        </svg>
      </a>
    </div>
  </div>
</section>

<style>
  .tab-button {
    color: #e5e5e5;
    border-color: rgba(255, 255, 255, 0.12);
  }

  .tab-button:hover {
    color: #ffffff;
    border-color: rgba(255, 255, 255, 0.35);
  }

  .tab-button.active {
    color: #0b0b0b;
    border-color: #ff4757;
    background: #ff4757;
  }
</style>

<script>
  const tabButtons = document.querySelectorAll('.tab-button');
  const tabContents = document.querySelectorAll('.tab-content');
  
  tabButtons.forEach(button => {
    button.addEventListener('click', () => {
      const tabId = button.getAttribute('data-tab');
      
      // Update buttons
      tabButtons.forEach(btn => {
        btn.classList.remove('active');
        btn.setAttribute('aria-selected', 'false');
      });
      button.classList.add('active');
      button.setAttribute('aria-selected', 'true');
      
      // Update content
      tabContents.forEach(content => {
        content.classList.add('hidden');
      });
      document.getElementById(`${tabId}-tab`)?.classList.remove('hidden');
    });
  });
</script>
