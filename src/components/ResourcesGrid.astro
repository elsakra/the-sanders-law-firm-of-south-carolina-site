---
interface Resource {
  title: string;
  description: string;
  href: string;
  cta?: string;
}

interface Props {
  headline?: string;
  resources: Resource[];
}

const { headline = "Resources", resources } = Astro.props;
---

<section class="bg-charcoal-950 py-28">
  <div class="max-w-7xl mx-auto px-6 lg:px-8">
    <div class="mb-12">
      <div class="inline-flex items-center gap-3 text-xs uppercase tracking-[0.3em] text-neutral-400">
        <span class="h-px w-10 bg-primary-500/70"></span>
        <span>Resources</span>
      </div>
      <h2 class="mt-5 font-display text-4xl sm:text-5xl text-white tracking-tight">{headline}</h2>
    </div>
    
    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
      {resources.map((resource) => (
        <a 
          href={resource.href}
          class="group relative block bg-charcoal-900/70 border border-white/5 p-8 transition-all hover:-translate-y-1 hover:border-primary-500/40 hover:shadow-[0_20px_60px_-30px_rgba(0,0,0,0.8)]"
        >
          <div class="absolute inset-0 bg-gradient-to-br from-white/5 via-transparent to-transparent opacity-0 group-hover:opacity-100 transition-opacity"></div>
          <div class="relative">
            <h3 class="font-display text-2xl text-white mb-4 group-hover:text-primary-400 transition-colors">
              {resource.title}
            </h3>
            <p class="text-neutral-400 text-sm leading-relaxed mb-6">
              {resource.description}
            </p>
            <span class="inline-flex items-center gap-2 text-primary-400 text-sm font-medium group-hover:gap-3 transition-all">
              {resource.cta || "Learn more"}
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
              </svg>
            </span>
          </div>
        </a>
      ))}
    </div>
  </div>
</section>
