---
interface Company {
  name: string;
  logo?: string;
}

interface Props {
  headline?: string;
  companies?: Company[];
}

const {
  headline = "Trusted by teams at",
  companies = [
    { name: "OpenAI" },
    { name: "Figma" },
    { name: "HubSpot" },
    { name: "Expensify" },
    { name: "Notion" },
    { name: "Stripe" }
  ]
} = Astro.props;
---

<section class="py-12 border-y border-white/10">
  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
    <p class="text-xs uppercase tracking-[0.22em] text-white/50 text-center mb-8">
      {headline}
    </p>
    
    <div class="flex flex-wrap items-center justify-center gap-x-12 gap-y-6">
      {companies.map((company) => (
        <div class="group flex items-center gap-2 opacity-50 hover:opacity-80 transition-opacity">
          {company.logo ? (
            <img 
              src={company.logo} 
              alt={company.name}
              class="h-7 w-auto grayscale brightness-200"
            />
          ) : (
            <span class="text-white/70 font-semibold text-lg tracking-tight">
              {company.name}
            </span>
          )}
        </div>
      ))}
    </div>
  </div>
</section>
