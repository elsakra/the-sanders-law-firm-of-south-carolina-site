---
import BaseLayout from '@/layouts/BaseLayout.astro';
import Button from '@/components/Button.astro';
import SectionHeader from '@/components/SectionHeader.astro';
import siteData from '@/data/site.json';
import { getCollection } from 'astro:content';

const plans = await getCollection('pricing-plans');
const sortedPlans = plans.sort((a, b) => (a.data.order || 0) - (b.data.order || 0));
const { company } = siteData;
---

<BaseLayout title="Pricing">
  <section class="pt-28 pb-14 bg-[#070A12] text-white">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <p class="text-xs uppercase tracking-[0.22em] text-white/60">Pricing</p>
      <h1 class="mt-4 font-display text-4xl sm:text-5xl font-bold tracking-tight">
        Simple pricing for high-velocity teams
      </h1>
      <p class="mt-5 text-lg text-white/70 max-w-2xl mx-auto">
        Start solo, then scale to a team. Upgrade anytime.
      </p>
    </div>
  </section>

  <section class="py-20 bg-[#0B1220]">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
      {sortedPlans.length > 0 ? (
        <div class="grid lg:grid-cols-3 gap-6">
          {sortedPlans.map((plan) => (
            <div
              class:list={[
                'rounded-2xl border p-8',
                plan.data.highlighted
                  ? 'border-white/20 bg-white/5 shadow-[0_0_0_1px_rgba(255,255,255,0.12)]'
                  : 'border-white/10 bg-white/[0.03]',
              ]}
            >
              <div class="flex items-center justify-between gap-4">
                <h2 class="font-display text-2xl font-bold text-white">{plan.data.name}</h2>
                {plan.data.highlighted && (
                  <span class="text-xs font-semibold px-2.5 py-1 rounded-full bg-white/10 text-white/80">
                    Most popular
                  </span>
                )}
              </div>
              <p class="mt-3 text-white/70">{plan.data.description}</p>

              <div class="mt-8 flex items-end gap-2">
                <span class="text-4xl font-bold text-white">{plan.data.price}</span>
                {plan.data.billingPeriod && (
                  <span class="text-white/60 mb-1">/{plan.data.billingPeriod}</span>
                )}
              </div>

              <div class="mt-8">
                <Button
                  href={plan.data.ctaHref || '/contact'}
                  style={plan.data.highlighted ? 'white' : 'outline'}
                  class={plan.data.highlighted ? 'w-full' : 'w-full border-white/20 text-white hover:bg-white/10'}
                >
                  {plan.data.ctaLabel || 'Get started'}
                </Button>
              </div>

              <ul class="mt-8 space-y-3">
                {plan.data.features.map((f) => (
                  <li class="flex items-start gap-3 text-white/75">
                    <span class="mt-1 inline-flex h-5 w-5 items-center justify-center rounded-full bg-white/10">
                      <svg class="h-3.5 w-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                      </svg>
                    </span>
                    <span>{f}</span>
                  </li>
                ))}
              </ul>
            </div>
          ))}
        </div>
      ) : (
        <div class="rounded-2xl border border-white/10 bg-white/[0.03] p-10 text-center text-white/70">
          No pricing plans yet.
        </div>
      )}
    </div>
  </section>

  <section class="py-20 bg-[#070A12] text-white">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="rounded-3xl border border-white/10 bg-white/[0.03] p-10 sm:p-14 text-center">
        <SectionHeader
          headline={`Talk to ${company.name} for teams`}
          description="Need security reviews, admin controls, or onboarding? Weâ€™ll help you roll out fast."
        />
        <div class="mt-10 flex flex-wrap justify-center gap-4">
          <Button href="/contact" style="white" size="lg">
            Contact sales
          </Button>
          <Button href="/services" style="outline" size="lg" class="border-white/20 text-white hover:bg-white/10">
            See features
          </Button>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>

