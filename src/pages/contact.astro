---
import BaseLayout from '@/layouts/BaseLayout.astro';
import Button from '@/components/Button.astro';
import siteData from '@/data/site.json';
import { getCollection } from 'astro:content';

const faqs = await getCollection('faq');
const sortedFaqs = faqs.sort((a, b) => (a.data.order || 0) - (b.data.order || 0)).slice(0, 5);
const { sections, company } = siteData;
---

<BaseLayout title="Contact Us">
  <!-- Hero -->
  <section class="pt-28 pb-14 bg-[#070A12] text-white">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="max-w-3xl mx-auto text-center">
        <p class="text-xs uppercase tracking-[0.22em] text-white/60">Contact</p>
        <h1 class="mt-4 font-display text-4xl sm:text-5xl font-bold tracking-tight">
          {sections.contact?.headline || "Contact sales"}
        </h1>
        {sections.contact?.description && (
          <p class="mt-6 text-lg text-white/70 leading-relaxed">
            {sections.contact.description}
          </p>
        )}
      </div>
    </div>
  </section>

  <!-- Contact Section -->
  <section class="py-20 border-t border-white/10">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid lg:grid-cols-2 gap-12 lg:gap-16">
        <!-- Contact Form -->
        <div class="rounded-2xl border border-white/10 bg-white/[0.03] p-8 lg:p-10">
          <h2 class="font-display text-2xl font-bold text-white mb-2">
            Request a demo
          </h2>
          <p class="text-white/70 mb-8">
            Tell us about your team and we’ll follow up quickly.
          </p>
          
          <form class="space-y-6" action="#" method="POST">
            <div class="grid sm:grid-cols-2 gap-6">
              <div>
                <label for="firstName" class="block text-sm font-medium text-white/80 mb-2">
                  First Name *
                </label>
                <input 
                  type="text" 
                  id="firstName" 
                  name="firstName"
                  required
                  class="w-full px-4 py-3 rounded-lg border border-white/10 bg-white/[0.03] text-white placeholder:text-white/40 focus:border-white/30 focus:ring-2 focus:ring-white/10 outline-none transition-colors"
                />
              </div>
              <div>
                <label for="lastName" class="block text-sm font-medium text-white/80 mb-2">
                  Last Name *
                </label>
                <input 
                  type="text" 
                  id="lastName" 
                  name="lastName"
                  required
                  class="w-full px-4 py-3 rounded-lg border border-white/10 bg-white/[0.03] text-white placeholder:text-white/40 focus:border-white/30 focus:ring-2 focus:ring-white/10 outline-none transition-colors"
                />
              </div>
            </div>
            
            <div class="grid sm:grid-cols-2 gap-6">
              <div>
                <label for="email" class="block text-sm font-medium text-white/80 mb-2">
                  Work Email *
                </label>
                <input 
                  type="email" 
                  id="email" 
                  name="email"
                  required
                  class="w-full px-4 py-3 rounded-lg border border-white/10 bg-white/[0.03] text-white placeholder:text-white/40 focus:border-white/30 focus:ring-2 focus:ring-white/10 outline-none transition-colors"
                />
              </div>
              <div>
                <label for="companyName" class="block text-sm font-medium text-white/80 mb-2">
                  Company *
                </label>
                <input 
                  type="text"
                  id="companyName"
                  name="companyName"
                  required
                  class="w-full px-4 py-3 rounded-lg border border-white/10 bg-white/[0.03] text-white placeholder:text-white/40 focus:border-white/30 focus:ring-2 focus:ring-white/10 outline-none transition-colors"
                />
              </div>
            </div>
            
            <div>
              <label for="teamSize" class="block text-sm font-medium text-white/80 mb-2">
                Team size
              </label>
              <select 
                id="teamSize" 
                name="teamSize"
                class="w-full px-4 py-3 rounded-lg border border-white/10 bg-white/[0.03] text-white focus:border-white/30 focus:ring-2 focus:ring-white/10 outline-none transition-colors"
              >
                <option value="">Select</option>
                <option value="1-5">1–5</option>
                <option value="6-25">6–25</option>
                <option value="26-100">26–100</option>
                <option value="100+">100+</option>
              </select>
            </div>
            
            <div>
              <label for="message" class="block text-sm font-medium text-white/80 mb-2">
                What are you trying to improve?
              </label>
              <textarea 
                id="message" 
                name="message"
                rows="4"
                class="w-full px-4 py-3 rounded-lg border border-white/10 bg-white/[0.03] text-white placeholder:text-white/40 focus:border-white/30 focus:ring-2 focus:ring-white/10 outline-none transition-colors resize-none"
                placeholder="Email volume, response time, follow-ups, workflows, AI, migrations..."
              ></textarea>
            </div>
            
            <Button style="white" size="lg" class="w-full">
              Contact sales
            </Button>
            
            <p class="text-xs text-white/55 text-center">
              By submitting, you agree to be contacted about your inquiry.
            </p>
          </form>
        </div>
        
        <!-- Contact Info -->
        <div>
          <h2 class="font-display text-2xl font-bold text-white mb-8">
            Contact
          </h2>
          
          <div class="space-y-6">
            <!-- Email -->
            <div class="rounded-2xl border border-white/10 bg-white/[0.03] p-7">
              <h3 class="font-semibold text-white">Email</h3>
              <a href={`mailto:${company.email}`} class="mt-2 inline-block text-white/80 hover:text-white">
                {company.email}
              </a>
              <p class="text-sm text-white/60 mt-2">We typically reply within 1 business day.</p>
            </div>
            
            <div class="rounded-2xl border border-white/10 bg-white/[0.03] p-7">
              <h3 class="font-semibold text-white">For teams</h3>
              <p class="mt-2 text-white/70">
                Need onboarding, admin controls, or security reviews? We’ll help you roll out fast.
              </p>
              <div class="mt-5 flex gap-3">
                <Button href="/pricing" style="white">
                  View pricing
                </Button>
                <Button href="/faq" style="outline" class="border-white/20 text-white hover:bg-white/10">
                  Read FAQ
                </Button>
              </div>
            </div>
          </div>
          
          <!-- FAQ Preview -->
          {sortedFaqs.length > 0 && (
            <div class="mt-12">
              <h3 class="font-display text-xl font-bold text-white mb-6">
                Frequently asked questions
              </h3>
              <div class="space-y-4">
                {sortedFaqs.map(async (faq) => {
                  const { Content } = await faq.render();
                  return (
                    <details class="group rounded-xl border border-white/10 bg-white/[0.03]">
                      <summary class="flex items-center justify-between cursor-pointer p-4 text-left">
                        <span class="font-medium text-white pr-4">
                          {faq.data.question}
                        </span>
                        <span class="flex-shrink-0">
                          <svg class="w-5 h-5 text-white/50 group-open:rotate-180 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/>
                          </svg>
                        </span>
                      </summary>
                      <div class="px-4 pb-4 text-white/70 text-sm prose prose-invert prose-sm">
                        <Content />
                      </div>
                    </details>
                  );
                })}
              </div>
            </div>
          )}
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
