---
import BaseLayout from '@/layouts/BaseLayout.astro';
import siteData from '@/data/site.json';
import { getCollection } from 'astro:content';

const faqItems = await getCollection('faq');
const { company } = siteData;
---

<BaseLayout title={`FAQ - ${company.name}`}>
  <!-- Hero Section -->
  <section class="pt-28 pb-14 bg-[#070A12] text-white">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <p class="text-xs uppercase tracking-[0.22em] text-white/60">FAQ</p>
      <h1 class="mt-4 font-display text-4xl md:text-5xl font-bold tracking-tight">
        Frequently asked questions
      </h1>
      <p class="mt-6 text-lg text-white/70">
        Security, setup, pricing, and migration.
      </p>
    </div>
  </section>

  <!-- FAQ Section -->
  <section class="py-16 border-t border-white/10">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
      {faqItems.length > 0 ? (
        <div class="space-y-4">
          {faqItems.map(async (faq, index) => {
            const { Content } = await faq.render();
            return (
              <details 
                class="group border border-white/10 rounded-lg overflow-hidden bg-white/[0.03]"
                open={index === 0}
              >
                <summary class="flex items-center justify-between p-5 cursor-pointer list-none hover:bg-white/[0.05] transition-colors">
                  <h3 class="font-display text-lg font-semibold text-white pr-8">
                    {faq.data.question}
                  </h3>
                  <svg 
                    class="w-5 h-5 text-white/60 flex-shrink-0 transition-transform group-open:rotate-180" 
                    fill="none" 
                    stroke="currentColor" 
                    viewBox="0 0 24 24"
                  >
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/>
                  </svg>
                </summary>
                <div class="px-5 pb-5 border-t border-white/10 prose prose-invert max-w-none pt-4 text-white/75">
                  <Content />
                </div>
              </details>
            );
          })}
        </div>
      ) : (
        <div class="text-center py-16">
          <p class="text-white/70">No FAQs available at this time.</p>
        </div>
      )}
    </div>
  </section>

  <!-- Contact CTA -->
  <section class="py-16 border-t border-white/10">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="font-display text-3xl font-bold text-white mb-4">
        Still have questions?
      </h2>
      <p class="text-white/70 mb-8 max-w-2xl mx-auto">
        Talk to sales for teams, onboarding, and security reviews.
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a 
          href="/contact" 
          class="inline-flex items-center justify-center gap-2 bg-white hover:bg-white/90 text-[#070A12] px-8 py-4 rounded-lg font-semibold transition-colors"
        >
          Contact sales
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
          </svg>
        </a>
        <a
          href="/pricing"
          class="inline-flex items-center justify-center gap-2 border border-white/20 hover:bg-white/10 text-white px-8 py-4 rounded-lg font-semibold transition-colors"
        >
          View pricing
        </a>
      </div>
    </div>
  </section>
</BaseLayout>
