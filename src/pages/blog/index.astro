---
import BaseLayout from '@/layouts/BaseLayout.astro';
import Button from '@/components/Button.astro';
import { getCollection } from 'astro:content';

const posts = await getCollection('blog');
const sortedPosts = posts.sort((a, b) => 
  new Date(b.data.publishedAt).getTime() - new Date(a.data.publishedAt).getTime()
);
---

<BaseLayout title="Blog">
  <!-- Hero -->
  <section class="pt-28 pb-14 bg-[#070A12] text-white">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="max-w-3xl mx-auto text-center">
        <p class="text-xs uppercase tracking-[0.22em] text-white/60">Blog</p>
        <h1 class="mt-4 font-display text-4xl sm:text-5xl font-bold tracking-tight">
          Notes on speed
        </h1>
        <p class="mt-6 text-lg text-white/70 leading-relaxed">
          Product updates, workflows, and tactics for moving faster.
        </p>
      </div>
    </div>
  </section>

  <!-- Blog Grid -->
  <section class="py-20 border-t border-white/10">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
      {sortedPosts.length > 0 ? (
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
          {sortedPosts.map((post) => (
            <article class="rounded-2xl overflow-hidden border border-white/10 bg-white/[0.03] hover:bg-white/[0.05] transition-colors">
              {post.data.image && (
                <a href={`/blog/${post.slug}`} class="block aspect-[16/9] overflow-hidden">
                  <img 
                    src={post.data.image} 
                    alt={post.data.title}
                    class="w-full h-full object-cover hover:scale-105 transition-transform duration-300"
                  />
                </a>
              )}
              <div class="p-6">
                <div class="flex items-center gap-4 text-sm text-white/55 mb-3">
                  <time datetime={post.data.publishedAt}>
                    {new Date(post.data.publishedAt).toLocaleDateString('en-US', {
                      year: 'numeric',
                      month: 'long',
                      day: 'numeric'
                    })}
                  </time>
                  {post.data.category && (
                    <>
                      <span>â€¢</span>
                      <span class="text-white/70">{post.data.category}</span>
                    </>
                  )}
                </div>
                <h2 class="font-display text-xl font-bold text-white">
                  <a href={`/blog/${post.slug}`} class="hover:text-primary-600 transition-colors">
                    {post.data.title}
                  </a>
                </h2>
                <p class="mt-2 text-white/65 text-sm leading-relaxed line-clamp-3">
                  {post.data.excerpt}
                </p>
                <a 
                  href={`/blog/${post.slug}`}
                  class="mt-4 inline-flex items-center text-white/80 font-medium text-sm hover:text-white"
                >
                  Read More
                  <svg class="ml-1 w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                  </svg>
                </a>
              </div>
            </article>
          ))}
        </div>
      ) : (
        <div class="text-center py-12">
          <p class="text-white/70 text-lg">No blog posts yet.</p>
        </div>
      )}
    </div>
  </section>
</BaseLayout>
